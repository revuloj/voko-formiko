    <sql
	driver="com.mysql.jdbc.Driver"
	url="jdbc:mysql://${srv.mysql-server}:3306/"
	userid="${srv.mysql-user}"
	password="${srv.mysql-pwd}"
	>
        <classpath>
          <path refid="mysql.classpath"/>
        </classpath>
      select count(*) from art;
    </sql>
-->

